<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.UserDetail">

    <TextView
            android:id="@+id/user_name"
            android:text="@string/default_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/user_id"
            android:text="@string/default_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/user_name" android:textSize="18sp"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/user_nickname"
            android:text="@string/default_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/user_id" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/user_page_url"
            android:autoLink="web"
            android:text="@string/default_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/user_nickname" android:textSize="18sp"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/user_followers_count"
            android:text="@string/default_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/user_page_url" android:textSize="18sp"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/user_following_count"
            android:text="@string/default_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/user_followers_count" android:textSize="18sp"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/user_number_gists"
            android:text="@string/default_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/user_following_count" android:textSize="18sp"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/user_number_repositories"
            android:text="@string/default_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/user_number_gists" android:textSize="18sp"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
            android:id="@+id/user_photo_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/user_number_repositories"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>